<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kevin="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/tab_sep_line" />

    <com.kevin.tabindicator.TabPageIndicatorEx
        android:id="@+id/tabIndicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        kevin:tabItemPadding="6dp"
        kevin:tabSelectedColor="@color/colorPrimary"
        kevin:tabLabels="@array/bottom_bar_labels"
        kevin:tabIcons="@array/bottom_normal_icon"
        kevin:tabTextSize="12sp"
        kevin:tabUnselectedColor="@color/textColorHint"/>

</android.support.v7.widget.LinearLayoutCompat>